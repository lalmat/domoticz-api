{
  "root": true,
  "env": {
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "key-spacing": [
      "error",
      {
        "multiLine": {
          "beforeColon": true,
          "afterColon": true
        },
        "align": {
          "beforeColon": true,
          "afterColon": true,
          "on": "colon"
        }
      }
    ]
  }
}
